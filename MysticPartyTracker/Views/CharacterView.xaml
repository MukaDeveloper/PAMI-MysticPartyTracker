<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MysticPartyTracker.Views.CharacterView"
             Title="Ficha de Personagens">
    <VerticalStackLayout Spacing="10" Margin="30">
        <FlexLayout JustifyContent="SpaceBetween">
            <VerticalStackLayout FlexLayout.Grow="1">
                <Label 
                    Text="Nome do Personagem"
                    />
                <Entry
                    Placeholder="Ex: Rodolfo"
                    />
            </VerticalStackLayout>
            <VerticalStackLayout>
                <Label
                    Text="Nível"
                    />
                <Entry 
                    Placeholder="Ex: 17"
                    />
            </VerticalStackLayout>
        </FlexLayout>


        <Label 
            Text="Classe do Personagem"
            />

        <Entry 
            Placeholder="Ex: Arqueiro"
            />

        <Label 
            Text="Raça do Personagem"
            />

        <Entry 
            Placeholder="Ex: Elfo"
            />

        <Button 
            Text="Adicionar"
            HorizontalOptions="CenterAndExpand"
            />

        <Label Padding="40" HorizontalOptions="Center"
            Text="FAZER A LISTA DE PERSONAGENS AQUI"/>
    </VerticalStackLayout>
</ContentPage>