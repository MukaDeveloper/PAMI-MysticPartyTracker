<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MysticPartyTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MysticPartyTracker.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MysticPartyTracker">

    <TabBar>
        <ShellContent
            Title="Rolador de Dados"
            ContentTemplate="{DataTemplate local:DiceView}"
            Route="Dice" />

        <ShellContent
            Title="Personagens"
            ContentTemplate="{DataTemplate local:CharacterView}"
            Route="Character" />

        <ShellContent 
            Title="Spells"
            ContentTemplate="{DataTemplate local:SpellView}"
            Route="Spell"/>
    </TabBar>
    
    

</Shell>
